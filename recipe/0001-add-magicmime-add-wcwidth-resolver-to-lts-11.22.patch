Subject: [PATCH] add magicmime; add wcwidth; resolver to lts-11.22

---
 custres.yaml | 4 ++++
 stack.yaml   | 7 +++++--
 2 files changed, 9 insertions(+), 2 deletions(-)
 create mode 100644 custres.yaml

diff --git a/custres.yaml b/custres.yaml
new file mode 100644
index 0000000..09ed622
--- /dev/null
+++ b/custres.yaml
@@ -0,0 +1,4 @@
+resolver: lts-13.6 # Inherits GHC version and package set
+compiler: ghc-8.4.2 # Overwrites GHC version in the resolver, optional
+
+name: my-snapshot # User-friendly name
diff --git a/stack.yaml b/stack.yaml
index 5653705..850ec20 100644
--- a/stack.yaml
+++ b/stack.yaml
@@ -7,7 +7,7 @@ flags:
     webdav: true
     torrentparser: true
     webapp: true
-    magicmime: false
+    magicmime: true
     dbus: false
     debuglocks: false
     benchmark: false
@@ -15,6 +15,8 @@ flags:
 packages:
 - '.'
 extra-deps:
+- wcwidth-0.0.2
+- magic-1.1
 - IfElse-0.85
 - aws-0.20
 - bloomfilter-2.0.1.0
@@ -24,4 +26,5 @@ extra-deps:
 - sandi-0.5
 explicit-setup-deps:
   git-annex: true
-resolver: lts-13.6
+resolver: custres.yaml
+
